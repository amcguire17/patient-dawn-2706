<h1><%= @competition.name %></h1>

<p><%= @competition.location %></p>
<p><%= @competition.sport %></p>

<h2>Teams in Competition</h2>
<% @competition.teams.each do |team| %>
  <p><%= team.hometown %></p>
  <p><%= team.nickname %></p>
<% end %>

<h2>Average Age of Players: <%= @competition.average_age_players %></h2>

<%= link_to 'Register New Team', "/competitions/#{@competition.id}/teams/new" %>
